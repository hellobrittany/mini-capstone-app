<% @product.errors.full_messages.each do |error| %>
	<h2><%= error %></h2>
<% end %>	



<h1>New product</h1>

<%= form_tag '/products',  method: :post do  %>
	<div>
		Name: <input type="text" name="name" value="<%= @product.name %>">
	</div>
	
			<div>
		Description: <input type="text" name="description" value="<%= @product.description %>">
	</div>	<div>
		Price: <input type="text" name="price" value="<%= @product.price  %>">
	</div>

	<div><h2>Supplier: <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %></h2></div>

	<input type="submit" name="Create Wine">

<% end %> 